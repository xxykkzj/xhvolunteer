# Temple Volunteer Management System - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MySQL/TiDB connection string
# Format: mysql://username:password@host:port/database
# Example: mysql://root:password@localhost:3306/temple_volunteer
DATABASE_URL=mysql://username:password@localhost:3306/temple_volunteer

# ============================================
# SECURITY - ENCRYPTION & SIGNING
# ============================================

# AES-256-CBC Encryption Key (MUST be exactly 32 characters)
# Used for encrypting sensitive ID card data
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
AES_KEY=your-32-character-encryption-key!!

# AES-256-CBC Initialization Vector (MUST be exactly 16 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(8).toString('hex'))"
AES_IV=your-16-char-iv!

# HMAC-SHA256 Secret for Redemption Code Signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
HMAC_SECRET=your-hmac-secret-minimum-32-characters-long

# ============================================
# OAUTH AUTHENTICATION (Manus OAuth)
# ============================================

# OAuth Server URL (backend API endpoint)
# This is the Manus OAuth server that handles authentication
OAUTH_SERVER_URL=https://your-oauth-server.com

# Application ID (backend)
# This is your application's client ID in the OAuth system
APP_ID=your-app-id

# ============================================
# SUPER ADMIN CONFIGURATION
# ============================================

# Owner's OpenID (for initial super-admin account setup)
# This user will have full system access
OWNER_OPEN_ID=your-owner-openid

# Owner's Display Name
OWNER_NAME=Super Admin

# ============================================
# FRONTEND CONFIGURATION (Vite)
# ============================================

# Application Title (displayed in browser tab and UI)
VITE_APP_TITLE=Temple Volunteer Management

# Application Logo URL
VITE_APP_LOGO=https://your-cdn.com/logo.png

# OAuth Portal URL (frontend login page)
# This is where users are redirected to log in
VITE_OAUTH_PORTAL_URL=https://your-oauth-portal.com

# Application ID (frontend)
# Should match APP_ID in most cases
VITE_APP_ID=your-app-id

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Node Environment (development, production, test)
NODE_ENV=production

# Server Port (default: 3000)
PORT=3000

# ============================================
# SECURITY NOTES
# ============================================
#
# üîê BEFORE PRODUCTION DEPLOYMENT:
# 1. Generate strong random values for ALL security keys
# 2. NEVER commit .env file to version control
# 3. Keep .env file permissions restricted (chmod 600 .env)
# 4. Rotate keys periodically (at least annually)
# 5. Use different keys for development and production
#
# üö® DEFAULT VALUES ARE FOR DEVELOPMENT ONLY
